extends ../layouts/default
include ../mixins/carousel
include ../mixins/news-slide
include ../mixins/news-list
include ../mixins/pagination

block content
	.ui.grid.main-container#carousel-container
		+carousel(movies)
	.ui.grid.main-container#index-news-container
		.four.wide.column.list-items-container
			header
				h2.header= "最新消息"
			+news_list(news.results, "NewsPost")
			+pagination(news, true, 5)
			//- a.ui.button(href='/news/list') 顯示全部
		.twelve.wide.column.flipster-news-container
			.flat-flipster
				+news_slide(news.results, "NewsPost", "news")
