extends ../layouts/default
include ../mixins/carousel
include ../mixins/news-slide
include ../mixins/news-list

block content
	.ui.grid.main-container
		.ui.sixteen.wide.column.carousel-container
			main
				+carousel(movies)
		.row.news-box
			header: h2= '最新消息'
			.two.wide.column
			.twelve.wide.column
				.carousel-items
					.coverflow
						+news_slide(news)
				.list-items
					+news_list(news)
			.two.wide.column
			.ui.button#show-list-news 列表式查看
			
			
