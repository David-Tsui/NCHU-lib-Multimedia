include ../mixins/flash-messages

doctype html
html
	head
		if env === 'production'
			script.
				var _sf_startpt=(new Date()).getTime()
		
		meta(charset="utf-8")
		//- meta(name="viewport", content="initial-scale=1.0,user-scalable=no,maximum-scale=1,width=device-width")
		
		title= title || '多媒體中心'
		link(rel="shortcut icon", href="/favicon.ico", type="image/x-icon")
		link(href='https://fonts.googleapis.com/icon?family=Material+Icons', rel='stylesheet')
		link(href='http://fonts.googleapis.com/css?family=Open+Sans:400italic,400,300,600,700', rel='stylesheet')
		link(href='https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.1.8/semantic.min.css', rel='stylesheet')
		link(href='https://code.getmdl.io/1.1.3/material.teal-indigo.min.css', rel='stylesheet')
		link(href='/jquery.scrollbar/jquery.scrollbar.css', rel='stylesheet')
		link(href='/jquery-flipster/dist/jquery.flipster.css', rel='stylesheet')
		//- link(href='/owl.carousel/owl.carousel.css', rel="stylesheet")
		//- link(href='/owl.carousel/owl.theme.default.min.css', rel="stylesheet")
		link(href="/styles/css/style.css", rel="stylesheet")
		
		if user && user.canAccessKeystone
			link(href="/keystone/styles/content/editor.min.css", rel="stylesheet")
		
		block css
		block head
	body
		button.btn-nav
			.bar.arrow-top-r
			.bar.arrow-middle-r
			.bar.arrow-bottom-r
		.ui.grid.nav-grid.nav-wrap
			.computer.tablet.only.centered.row
				.ui.secondary.menu#navbar
					.left.menu
						each link in navLinks
							if link.nested 
								.ui.dropdown.item
									span=link.label
									i.dropdown.icon
									.menu
										each subLink in link.subnav
											a.item(href=subLink.href)= subLink.label
							else 
								a.item(href=link.href)= link.label
								//- li(class=(section === link.key ? 'active' : null)): a(href=link.href)= link.label	
					.right.menu
						if user
							a.item(href='/keystone') 管理者介面
							a.item(href='/keystone/signout') 登出
							//- a.item(href='/keystone') Admin UI
							//- a.item(href='/keystone/signout') Sign out
						else
							a.item(href='/keystone/signin') 管理
							//- a.item(href='/keystone/signin') Sign in							
		//- intro
		block intro
		//- messages
		+flash-messages(messages)
		//- content
		block content
		//- footer
		footer.main-footer
			-footer
			p Copyright &copy; 2016 中興大學圖書館
			p: a(href="http://www.lib.nchu.edu.tw/", class="twitter-follow-button", data-show-count="false", data-size="large") 圖書館網站
		
		script.
			!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+'://platform.twitter.com/widgets.js';fjs.parentNode.insertBefore(js,fjs);}}(document, 'script', 'twitter-wjs');

		//- scripts
		script(src='/js/lib/jquery/jquery-2.1.4.min.js')
		script(src='https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.1.8/semantic.min.js')
		script(src='https://code.getmdl.io/1.1.3/material.min.js' defer)  
		//- script(src='/owl.carousel/owl.carousel.min.js')
		script(src='/jquery.loopmovement/jquery.loopmovement.min.js')
		script(src='/jquery-flipster/dist/jquery.flipster.min.js')
		script(src='/jquery.scrollbar/jquery.scrollbar.min.js')
		script(src='/js/min/main.js')
	
		if user && user.canAccessKeystone
			script(src='/keystone/js/content/editor.js')
			
		block page-js
		
		if env === 'production'
			script.
				(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
				(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
				m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
				})(window,document,'script','//www.google-analytics.com/analytics.js','ga');

				ga('create', '#{ga_property}', '#{ga_domain}');
				ga('send', 'pageview');
			script.
				var _sf_async_config = { uid: #{chartbeat_property}, domain: '#{chartbeat_domain}', useCanonical: true };
				(function() {
					function loadChartbeat() {
						window._sf_endpt = (new Date()).getTime();
						var e = document.createElement('script');
						e.setAttribute('language', 'javascript');
						e.setAttribute('type', 'text/javascript');
						e.setAttribute('src','//static.chartbeat.com/js/chartbeat.js');
						document.body.appendChild(e);
					};
					var oldonload = window.onload;
					window.onload = (typeof window.onload != 'function') ?
					loadChartbeat : function() { oldonload(); loadChartbeat(); };
				})();
