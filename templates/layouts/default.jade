		script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.0.0-rc1/jquery.min.js')
		script(src='https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.1.8/semantic.min.js')
		script(src='https://code.getmdl.io/1.1.3/material.min.js')  
		script(src='/js/lib/jquery.hover3d.min.js')
		script(src='/jquery-flipster/jquery.flipster.min.js')
		script(src='/jquery.scrollbar/jquery.scrollbar.min.js')
		script(src='/jquery.scrollbox/jquery.scrollbox.js')
		script(src='/js/min/main.js')
	
		if user && user.canAccessKeystone
			script(src='/keystone/js/content/editor.js')
			
		block page-js
		
		if env === 'production'
			script.
