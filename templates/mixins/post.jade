			img(src=post._.image.fit(120,120))
		.content
			a.header!= post.name
			.description
				p!= post.content.brief
			.extra
				time= post._.publishedDate.format('MMMM Do, YYYY')
			.meta
				a(href='/blog/post/' + post.key)
