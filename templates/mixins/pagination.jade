mixin pagination(source, is_horizontal)
	if is_horizontal
		if source.totalPages > 1
			ul.pagination
				if source.previous
					li: a(href='?page=' + source.previous): i.material-icons chevron_left
				else
					li.disabled: i.material-icons chevron_left
				each p, i in source.pages
					li(class=source.currentPage === p ? 'active' : null)
						a(href='?page=' + (p === '...' ? (i ? source.totalPages : 1) : p ))= p
				if source.next
					li: a(href='?page=' + source.next): i.material-icons chevron_right
				else
					li.disabled: i.material-icons chevron_right
	else 
		if source.totalPages > 1
			ul.pagination
				if source.previous
					li: a(href='?page=' + source.previous): i.material-icons arrow_drop_up
				else
					li.disabled: i.material-icons arrow_drop_up
				each p, i in source.pages
					li(class=source.currentPage === p ? 'active' : null)
						a(href='?page=' + (p === '...' ? (i ? source.totalPages : 1) : p ))= p
				if source.next
					li: a(href='?page=' + source.next): i.material-icons arrow_drop_down
				else
					li.disabled: i.material-icons arrow_drop_down